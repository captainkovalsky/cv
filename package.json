{
  "name": "cv",
  "dependencies": {
    "@types/node": "16.10.2",
    "@types/react": "17.0.26",
    "@types/react-dom": "^17.0.9",
    "classnames": "^2.3.1",
    "node-sass": "^6.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "^4.0.3",
    "typescript": "^4.4.4",
    "web-vitals": "2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "yarn lint && yarn test:ci",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "yarn test --watchAll=false --maxWorkers=1;",
    "eject": "react-scripts eject",
    "fmt": "yarn prettier ./ --write --ignore-path ./.gitignore",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --max-warnings 0",
    "build:next": "node esbuild.mjs"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.1",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "27.0.2",
    "esbuild": "^0.13.4",
    "esbuild-plugin-sass-modules": "^0.0.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1"
  }
}
